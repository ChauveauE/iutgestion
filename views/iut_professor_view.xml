<odoo>
  <data>
  <!-- vue liste professeurs -->
    <record model="ir.ui.view" id="iut_professor_tree_view">
      <field name="name">iut.professor.tree</field>
      <field name="model">iut.professor</field>
      <field name="arch" type="xml">
        <tree string="Modèle">
            <field name="class_id"/>
        </tree>
      </field>
    </record>
    <!-- formulaire liste professeurs -->
    <record id="iut_professor_action" model="ir.actions.act_window">
        <field name="name">Lycée</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">iut.professor</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- affichage de la sélection de la classe dans la FEN prof -->
    <record model="ir.ui.view" id="iut_professor_form_view">
        <field name="name">iut.professor.form</field>
        <field name="inherit_id" ref="base.view_partner_form"></field>
        <field name="mode">primary</field>
        <field name="model">iut.professor</field>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="iut" string="Classe IUT Gestion">
                    <group>
                        <field name="class_id"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
